<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">


    <RelativeLayout
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Main Heading -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Please Wait... "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="8dp"
            android:text="We are working to generate your trip plan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#666666" />

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splashscreen" />
    </RelativeLayout>

    <!-- Main Content Layout (Hidden Initially) -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_below="@id/loading_screen"
        android:paddingTop="16dp">

        <!-- Image (Top 25% of the screen) -->
        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:src="@drawable/main_img" />

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Heading with Location -->
            <TextView
                android:id="@+id/heading_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Destination"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textAllCaps="true"/>

            <!-- Start and End Date -->
            <TextView
                android:id="@+id/start_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" MM/DD/YYYY -  MM/DD/YYYY"
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold"/>

            <!-- Heading: Hostels or Places -->
            <TextView
                android:id="@+id/hostel_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recommended Hostels"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Inside your HorizontalScrollView (unchanged) -->
        <LinearLayout
            android:id="@+id/horizontal_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/places_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Recommended Places"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Horizontal Scroll View for Places -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/places_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Place items will be added here dynamically -->
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>
</RelativeLayout>
