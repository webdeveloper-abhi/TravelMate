<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Fragments.PrivacyPolicyFragment">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We want you to know exactly how  Application works and why we need your details. Reviewing our policy will help you continue using the app with peace of mind."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <LinearLayout
                android:id="@+id/includedLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2B90AA">

                <TextView
                    android:id="@+id/infoTextView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="What information do we Collect about You"/>

                <ImageView
                    android:id="@+id/addButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In our  app, we collect personal information like name, email, and phone during registration, and billing details for payments. Usage data includes app interactions and device information. We also gather location data for services like finding nearby parking spots. Rest assured, we prioritize safeguarding your information."
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/includedLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2B90AA"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/infoTextView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="How do we use your information"/>

                <ImageView
                    android:id="@+id/addButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We utilize your information to personalize your experience, process payments securely, and improve our services. Your name, email, and phone are used for account management and communication. Usage data helps us enhance features and optimize performance. We may contact you for important updates and provide support as needed. Rest assured, we prioritize your privacy and employ stringent measures to safeguard your information."
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/includedLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2B90AA"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/infoTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="To whom do we disclose your information"/>

                <ImageView
                    android:id="@+id/addButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We do not disclose your information to third parties unless necessary for service provision or legal compliance. Trusted partners, such as payment processors, may receive your billing details for transaction processing. Additionally, we may share data with law enforcement or regulatory authorities in compliance with legal obligations or to protect our rights and users' safety. Your information remains confidential and is disclosed only when required for essential purposes, ensuring your privacy and security are upheld"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/includedLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2B90AA"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/infoTextView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="What do we do to keep your information secure ?"/>

                <ImageView
                    android:id="@+id/addButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To maintain the security of your information, we implement stringent measures. These include encryption for data transmission and storage, stringent access controls, and regular security assessments. Our staff undergoes comprehensive training on data protection, and we adhere to industry best practices. We continually update our systems to address emerging threats and vulnerabilities. Additionally, we monitor for suspicious activities and promptly address any breaches. Your trust is paramount, and we are committed to preserving the confidentiality and integrity of your information."
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"/>





        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
