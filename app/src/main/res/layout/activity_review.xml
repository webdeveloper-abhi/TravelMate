<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Review your plan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:text="Before generating your trip, please review your selection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#666666"/>


    <LinearLayout
        android:id="@+id/review_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subheading"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/destination"
            android:layout_marginRight="10dp"/> <!-- Replace with your icon -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solo travel - Explore the world alone"
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/destination"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Review Item 2 -->
    <LinearLayout
        android:id="@+id/review_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_item_1"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calender"
            android:layout_marginRight="10dp"/> <!-- Replace with your icon -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Dates"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Dec 2024 - 20 Dec 2024"
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/calendar"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Review Item 3 -->
    <LinearLayout
        android:id="@+id/review_item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_item_2"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/freinds"
            android:layout_marginRight="10dp"/> <!-- Replace with your icon -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travelling"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderate - Balanced spending"
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/travel"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Review Item 4 -->
    <LinearLayout
        android:id="@+id/review_item_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_item_3"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/budget"
            android:layout_marginRight="10dp"/> <!-- Replace with your icon -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comfortable 4-star hotels"
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/mybudget"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"
        android:backgroundTint="#000000"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
