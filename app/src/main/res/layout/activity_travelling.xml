<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Who's Travelling"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"/>


    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="20dp"
        android:text="Choose your Travellers"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#666666"/>

    <!-- Buttons for travel options -->

    <!-- Button 1: Just Me -->
    <LinearLayout
        android:id="@+id/button_just_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subheading"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="#00BCD4"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JUST ME\nA sole traveler is exploring"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <!-- Replace with your own icon -->
    </LinearLayout>

    <!-- Button 2: A Couple -->
    <LinearLayout
        android:id="@+id/button_couple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_just_me"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A COUPLE\nTwo travelers enjoying"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <!-- Replace with your own icon -->
    </LinearLayout>

    <!-- Button 3: Family -->
    <LinearLayout
        android:id="@+id/button_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_couple"
        android:orientation="horizontal"
        android:background="#F44336"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FAMILY\nA group of fun-loving adventurers"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <!-- Replace with your own icon -->
    </LinearLayout>

    <!-- Button 4: Friends -->
    <LinearLayout
        android:id="@+id/button_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_family"
        android:orientation="horizontal"
        android:background="#E91E63"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRIENDS\nA bunch of seekers"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"/>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#000000"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</RelativeLayout>
